{% extends "layout.njk" %}

{% block head %}

<title>Portfolio - Alan Alves</title> 

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

{% endblock %}

{% block content %}

<section class="title">
    <h1>Portfolio</h1>
</section>

<main class="cards">

    {% for item in items %}
    <div class="card" id="{{item.id}}">
        <div class="card_img-container">
            <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" height="200px" alt="{{item.title}}">
        </div>
        <div class="card_content">
            <p>{{item.title}}</p>
        </div>
        <div class="card_info">
            <p>{{item.duration}}</p>
            <p class="card_price">{{item.price}}</p>
        </div>
    </div>
    {% endfor %}

</main>

<div class="modal-overlay">
    <div class="modal">
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>

        <div class="modal-content">
            <iframe src="https://www.youtube.com.br/embed/DiXbJL3iWVs" frameborder="0"></iframe>
        </div>
    </div>
</div>

<script src="scripts.js"></script>

{% endblock %}